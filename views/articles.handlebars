<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    {{#each articles}}
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="heading{{ this._id }}">
                <h4 class="panel-title row">
                    <div class="col-sm-9">
                        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse{{ this._id }}" aria-expanded="true" aria-controls="collapse{{ this._id }}">
                            {{ this.title }}
                        </a>
                        <small>{{ this.origin }}</small>
                    </div>
                    <div class="col-sm-3">
                        <button type="submit" form="hidden-form-{{ this._id }}" class="btn btn-secondary btn-sm pull-right">Delete</button>
                        <form method="POST" action="/articles/{{ this._id }}?_method=DELETE" id="hidden-form-{{ this._id }}" class="hidden-xs-up"></form>
                    </div>
                </h4>
            </div>
            <div id="collapse{{ this._id }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading{{ this._id }}">
                <div class="panel-body">
                    <h5>Add a comment</h5>
                    <form action="/comments" class="form" method="POST">
                        <div class="form-group">
                            <textarea class="form-control" rows="3" name="body"></textarea>
                            <input type="hidden" name="article_title" value="{{ this.title }}"></input>
                            <button type="submit" class="btn btn-default">Comment</button>
                        </div>
                    </form>
                    <hr>
                    <h5>Comments</h5>
                    <ul style="padding: 0;">
                        {{#each this.comments}}
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-sm-9">
                                        <p class="list-group-item-text">{{ this.body }}</p>
                                    </div>
                                    <div class="col-sm-3">
                                        <button type="submit" form="hidden-form-{{ this.id }}" class="btn btn-secondary btn-sm pull-right">Delete</button>
                                        <form method="POST" action="/comments/{{ this.id }}?_method=DELETE" id="hidden-form-{{ this.id }}" class="hidden-xs-up"></form>
                                    </div>
                                </div>
                            </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    {{/each}}
</div>

